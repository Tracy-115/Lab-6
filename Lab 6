#include <iostream>
#include <ctime>
using namespace std;

//function for data entry
void enterArrayData(double *data){
  cout<< "Data entry for the array: " << endl;
  for(int i=0 ; i<=4 ; i++){
    cout << "> Element #" << i << ":";
    cin >> *(data+i);
  }
  cout << "Data entry complete." << endl;
}

//function for data output
void outputArrayData(double *data){
  cout << "Outputting array elements: ";
  for(int i=0; i<=4 ; i++){
  cout << *(data+i);
  }
  cout << endl;
}

//function to sum up data
double sumArray(double *data){
  double sum =0;
  for(int i=0; i<=4 ; i++){
    sum += *(data+i);
  }
  return sum;
}

int main(){
  double *array = new double[5];
  enterArrayData(array);
  outputArrayData(array);

  cout << "Sum of values: " << sumArray(array) << endl;
  delete[] array;
return 0;
}
